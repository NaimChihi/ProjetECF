{% block javascripts %}
<script>
// Sélectionnez les éléments du menu déroulant et du bouton de menu
const menuDropdown = document.getElementById("menu-dropdown");
const menuToggle = document.getElementById("menu-toggle");

// Masquez le menu-dropdown au chargement de la page
menuDropdown.style.display = "none";

// Écoutez le clic sur le menu-toggle
menuToggle.addEventListener("click", () => {
    // Inversez la visibilité du menu-dropdown au clic
    if (menuDropdown.style.display === "none" || menuDropdown.style.display === "") {
        menuDropdown.style.display = "block";
    } else {
        menuDropdown.style.display = "none";
    }
});

// Écoutez le redimensionnement de la fenêtre pour gérer l'affichage du menu-toggle
window.addEventListener("resize", () => {
    if (window.innerWidth < 800) {
        // En dessous de 800 pixels, affichez le menu-toggle
        menuToggle.style.display = "block";
    } else {
        // Au-dessus de 800 pixels, masquez le menu-toggle
        menuToggle.style.display = "none";
        // Masquez également le menu-dropdown
        menuDropdown.style.display = "none";
    }
});

// Appelez l'événement de redimensionnement lors du chargement de la page
window.dispatchEvent(new Event("resize"));

</script>
{% endblock %}






