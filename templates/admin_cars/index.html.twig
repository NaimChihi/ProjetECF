{% extends 'base.html.twig' %}

{% block title %}Cars index{% endblock %}

{% block body %}
    <h1>Cars index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Year</th>
                <th>Km</th>
                <th>Characteristic</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.Brand }}</td>
                <td>{{ car.price }}</td>
                <td>{{ car.year ? car.year|date('Y-m-d') : '' }}</td>
                <td>{{ car.km }}</td>
                <td>{{ car.characteristic }}</td>
                <td>
                    <a href="{{ path('app_admin_cars_show', {'id': car.id}) }}">show</a>
                    <a href="{{ path('app_admin_cars_edit', {'id': car.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_cars_new') }}">Create new</a>
{% endblock %}
