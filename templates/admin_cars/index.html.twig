{% extends 'base.html.twig' %}

{% block title %}Cars index{% endblock %}

{% block body %}
</br></br></br></br>
    <h1>Les voitures</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Prix</th>
                <th>Année</th>
                <th>Km</th>
                <th>Caractéristiques</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.Brand }}</td>
                <td>{{ car.price }}</td>
                <td>{{ car.year ? car.year|date('Y-m-d') : '' }}</td>
                <td>{{ car.km }}</td>
                <td>{{ car.characteristic }}</td>
                <td>
                    <a href="{{ path('app_admin_cars_show', {'id': car.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_cars_edit', {'id': car.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Rien trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_cars_new') }}">Créer une nouvelle annonce</a>
    <a href="{{ path('admin_index') }}">Retour au menu</a>
{% endblock %}
